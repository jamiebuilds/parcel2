{
  "name": "parcel2",
  "version": "0.0.0",
  "description": "Experiment",
  "repository": "https://github.com/parcel/parcel",
  "author": "Parcel Contributors",
  "license": "MIT",
  "engines": {
    "node": ">= 8.0.0"
  },
  "bolt": {
    "workspaces": [
      "src/configs/*",
      "src/core/*",
      "src/loaders/*",
      "src/packagers/*",
      "src/reporters/*",
      "src/resolvers/*",
      "src/servers/*",
      "src/transforms/*"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write '**/*.{js,json,md}'",
    "build": "bolt workspaces exec --ignore-fs 'config/*' -- babel src -d lib && flow-copy-source src lib",
    "flow": "flow",
    "test": "ava",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "find-up": "^2.1.0",
    "js-yaml": "^3.10.0",
    "json5": "^0.5.1",
    "resolve-from": "^4.0.0",
    "toml": "^2.3.3",
    "typeable-promisify": "^2.0.1"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.17.0",
    "flow-bin": "^0.71.0",
    "flow-copy-source": "^1.3.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "sinon": "^4.2.2"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
